@model BOCS.ModelsView.LessonCreateVM
@{
    ViewData["Title"] = "Create Lesson";
}
<section class="container py-4">
    <h4 class="mb-3">Add lesson</h4>

    <form asp-action="Create" asp-route-courseId="@Model.CourseId" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="CourseId" />
        <!-- 🔒 SortOrder hidden; server computes -->
        <input type="hidden" asp-for="SortOrder" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="YoutubeUrlOrId" class="form-label">YouTube URL or ID</label>
            <input asp-for="YoutubeUrlOrId" class="form-control" />
            <span asp-validation-for="YoutubeUrlOrId" class="text-danger"></span>
        </div>

        <div class="row g-3">
            <div class="col-sm-4 d-flex align-items-end">
                <div class="form-check">
                    <input class="form-check-input" asp-for="IsPublished" />
                    <label class="form-check-label" asp-for="IsPublished">Published</label>
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Subject (optional)</label>
            <select asp-for="SubjectId" class="form-select"
                    asp-items="@(new SelectList((IEnumerable<SelectListItem>)ViewBag.Subjects,"Value","Text"))">
                <option value="">— None —</option>
            </select>
        </div>

        <!-- File Upload Section -->
        <div class="mb-4">
            <h5>Lesson Attachments</h5>

            <!-- Images Upload -->
            <div class="mb-3">
                <label asp-for="LessonImages" class="form-label">Lesson Images</label>
                <input asp-for="LessonImages" type="file" class="form-control" multiple accept="image/*" />
                <div class="form-text">Select multiple image files (JPG, PNG, GIF)</div>
            </div>

            <!-- Documents Upload -->
            <div class="mb-3">
                <label asp-for="LessonDocuments" class="form-label">Lesson Documents</label>
                <input asp-for="LessonDocuments" type="file" class="form-control" multiple accept=".pdf,.doc,.docx,.txt,.ppt,.pptx" />
                <div class="form-text">Select multiple document files (PDF, DOC, DOCX, TXT, PPT, PPTX)</div>
            </div>
        </div>

        <div class="mt-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary">Save</button>
            <a class="btn btn-outline-secondary"
               asp-route="CourseLessons_Manage"
               asp-route-courseId="@Model.CourseId">
                Back to lesson
            </a>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/lesson-management.js"></script>
}