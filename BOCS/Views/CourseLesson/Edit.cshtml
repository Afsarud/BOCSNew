@model BOCS.ModelsView.LessonEditVM
@{
    ViewData["Title"] = "Edit Lesson";
}
<section class="container py-4">
    <h4 class="mb-3">Edit lesson</h4>

    <form asp-action="Edit"
          asp-route-courseId="@Model.CourseId"
          asp-route-id="@Model.Id"
          method="post"
          enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="CourseId" />
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="YoutubeUrlOrId" class="form-label">YouTube URL or ID</label>
            <input asp-for="YoutubeUrlOrId" class="form-control" />
            <span asp-validation-for="YoutubeUrlOrId" class="text-danger"></span>
        </div>

        <div class="row g-3">
            <div class="col-sm-4">
                <label asp-for="SortOrder" class="form-label"></label>
                <input asp-for="SortOrder" class="form-control" />
                <span asp-validation-for="SortOrder" class="text-danger"></span>
            </div>
            <div class="col-sm-4 d-flex align-items-end">
                <div class="form-check">
                    <input class="form-check-input" asp-for="IsPublished" />
                    <label class="form-check-label" asp-for="IsPublished">Published</label>
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Subject (optional)</label>
            <select asp-for="SubjectId" class="form-select"
                    asp-items="@(new SelectList((IEnumerable<SelectListItem>)ViewBag.Subjects,"Value","Text"))">
                <option value="">— None —</option>
            </select>
        </div>

        <!-- File Upload Section -->
        <div class="mb-4">
            <h5>Lesson Attachments</h5>
            
            <!-- Existing Images -->
            @if (Model.ExistingImages.Any())
            {
                <div class="mb-3">
                    <label class="form-label">Existing Images</label>
                    <div class="row" id="existingImages">
                        @foreach (var image in Model.ExistingImages)
                        {
                            <div class="col-md-2 col-sm-3 col-4 mb-2" data-attachment-id="@image.Id">
                                <div class="card h-100">
                                    <div class="card-img-container" style="height: 80px; overflow: hidden;">
                                        <img src="@image.FilePath" class="card-img-top w-100 h-100" style="object-fit: cover; object-position: center;" alt="@image.FileName">
                                    </div>
                                    <div class="card-body p-2 d-flex flex-column" style="min-height: 60px;">
                                        <div class="flex-grow-1">
                                            <small class="text-muted d-block" style="font-size: 0.7rem; line-height: 1.1; word-break: break-word;">@image.FileName</small>
                                            <small class="text-muted" style="font-size: 0.6rem;">@image.FileSize</small>
                                        </div>
                                        <div class="mt-1">
                                            <button type="button" class="btn btn-sm btn-outline-danger delete-attachment-btn w-100" style="padding: 0.1rem 0.3rem; font-size: 0.7rem;" data-attachment-id="@image.Id" data-attachment-type="image">
                                                <i class="bi bi-x"></i> Delete
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- New Images Upload -->
            <div class="mb-3">
                <label asp-for="LessonImages" class="form-label">Add More Images</label>
                <input asp-for="LessonImages" type="file" class="form-control" multiple accept="image/*" />
                <div class="form-text">Select multiple image files (JPG, PNG, GIF)</div>
            </div>

            <!-- Existing Documents -->
            @if (Model.ExistingDocuments.Any())
            {
                <div class="mb-3">
                    <label class="form-label">Existing Documents</label>
                    <div class="list-group" id="existingDocuments">
                        @foreach (var doc in Model.ExistingDocuments)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center" data-attachment-id="@doc.Id">
                                <div>
                                    <strong>@doc.FileName</strong>
                                    <br>
                                    <small class="text-muted">@doc.FileSize</small>
                                </div>
                                <div>
                                    <a href="@doc.FilePath" target="_blank" class="btn btn-sm btn-outline-primary me-2">
                                        View
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger delete-attachment-btn" data-attachment-id="@doc.Id" data-attachment-type="document">
                                        Delete
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- New Documents Upload -->
            <div class="mb-3">
                <label asp-for="LessonDocuments" class="form-label">Add More Documents</label>
                <input asp-for="LessonDocuments" type="file" class="form-control" multiple accept=".pdf,.doc,.docx,.txt,.ppt,.pptx" />
                <div class="form-text">Select multiple document files (PDF, DOC, DOCX, TXT, PPT, PPTX)</div>
            </div>
        </div>

        <div class="mt-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary">Update</button>
            <a class="btn btn-outline-secondary"
               asp-controller="CourseLesson"
               asp-action="Manage"
               asp-route-courseId="@Model.CourseId">
                Cancel
            </a>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/lesson-management.js"></script>
}