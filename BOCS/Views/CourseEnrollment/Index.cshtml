@model IEnumerable<BOCS.Controllers.CoursePickVM>
@{
    ViewData["Title"] = "Course Enrollment";
}

<div class="row">
    <div class="d-flex align-items-center mb-3">
        <h4 class="mb-0">Select a course to enroll in </h4>
        <span class="ms-2 badge bg-secondary">@Model?.Count()</span>
        <div class="ms-auto" />
    </div>
</div>

<section class="container py-4">
    

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No courses available.</div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var c in Model)
            {
                <div class="col-sm-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0">
                        @if (!string.IsNullOrWhiteSpace(c.ThumbnailUrl))
                        {
                            <img src="@c.ThumbnailUrl"
                                 class="card-img-top"
                                 alt="@c.Title"
                                 style="height: 180px; object-fit: cover;" />
                        }
                        else
                        {
                            <img src="~/images/no-image.png"
                                 class="card-img-top"
                                 alt="No Image"
                                 style="height: 180px; object-fit: cover;" />
                        }

                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title mb-1 text-truncate" title="@c.Title">
                                @c.Title
                            </h6>

                            <!-- বামে Duration, ডানে Price -->
                            <div class="d-flex justify-content-between text-muted small mb-3">
                                <span>
                                    Duration: @c.DurationDays days
                                    @if (c.CourseType == BOCS.Models.CourseType.Half)
                                    {
                                        <text> (Half)</text>
                                    }
                                </span>
                                <span>৳ @c.PriceBdt.ToString("N0")</span>
                            </div>

                            <div class="mt-auto d-flex justify-content-end">
                                <a class="btn btn-primary btn-sm"
                                   asp-controller="CourseEnrollment"
                                   asp-action="Enroll"
                                   asp-route-id="@c.Id">
                                    Enroll
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</section>