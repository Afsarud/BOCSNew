@model BOCS.ModelsView.EnrollmentAdminItemVM
@{
    ViewData["Title"] = "Enrollment Info";
}

<section class="container py-4">
    <h4 class="mb-3">Enrollment details</h4>

    <dl class="row">
        <dt class="col-sm-3">Course</dt>
        <dd class="col-sm-9">@Model.CourseTitle (#@Model.CourseId)</dd>

        <dt class="col-sm-3">Student</dt>
        <dd class="col-sm-9">@Model.StudentName (@Model.StudentEmail)</dd>

        <dt class="col-sm-3">Created</dt>
        <dd class="col-sm-9">@Model.CreatedAt.ToLocalTime().ToString("dd MMM yyyy HH:mm")</dd>

        <dt class="col-sm-3">Start–End</dt>
        <dd class="col-sm-9">@Model.StartDate:dd MMM yyyy — @Model.EndDate:dd MMM yyyy</dd>

        <dt class="col-sm-3">Payment</dt>
        <dd class="col-sm-9">
            <div>Method: @Model.PaymentMethod</div>
            <div>Txn: <code>@Model.TransactionId</code></div>
            <div>Sender: @Model.SenderNumber</div>
            <div>Mobile: @Model.MobileNumber</div>
        </dd>

        <dt class="col-sm-3">Price</dt>
        <dd class="col-sm-9">৳ @Model.Price.ToString("N0")</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">
            @if (!Model.IsApproved && !Model.IsArchived)
            {
                <span class="badge bg-warning text-dark">Pending</span>
            }
            else if (Model.IsApproved && !Model.IsArchived)
            {
                <span class="badge bg-success">Approved</span>
            }
            else
            {
                <span class="badge bg-secondary">Archived</span>
            }
        </dd>
    </dl>

    <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
</section>
