@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "User List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="~/css/account.css" rel="stylesheet" />
</head>


<body class="page-userlist">
<div class="container mt-4">
    <h2 class="mb-4 text-center">Registered Users</h2>

    <!-- Search Bar -->
    <form asp-action="UserList" method="get"
          class="row g-2 justify-content-center align-items-center mb-3">
        <div class="col-12 col-md-6">
            <input type="text" name="search" value="@ViewData["CurrentFilter"]"
                   class="form-control" placeholder="Search by Name, Email or Role..." />
        </div>
        <div class="col-12 col-md-auto d-flex justify-content-center gap-2">
            <button type="submit" class="btn btn-primary w-100 w-md-auto">Search</button>
            <a asp-action="UserList" class="btn btn-secondary w-100 w-md-auto">Clear</a>
        </div>
    </form>

    <!-- Responsive Table -->
    <div class="table-responsive" style="overflow-x:auto; width:100%;">
        <table class="table table-bordered table-striped table-hover align-middle text-center w-100">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Status</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Role</th>
                    <th scope="col">Created Date</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                            <!-- ✅ Status Column -->
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                        
                        <td class="text-start">@user.FullName</td>
                        <td class="text-start">@user.Email</td>
                        <td class="text-start">@user.Role</td>
                        <td>@user.CreatedDate.ToString("dd-MMM-yyyy")</td>
                            <td>
                                <div class="action-buttons">
                                    <form asp-action="ToggleUserStatus" asp-route-id="@user.Id" method="post" class="d-inline">
                                        @if (user.IsActive)
                                        {
                                            <button type="submit" class="btn btn-warning">Deactivate</button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn btn-success">Activate</button>
                                        }
                                    </form>

                                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger"
                                       onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                                </div>
                            </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Action Buttons -->
    <div class="mt-3 text-center d-flex flex-wrap justify-content-center gap-2">
        <a asp-action="Register" class="btn btn-success">Add New User</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</div>
</body>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}