@model IEnumerable<BOCS.ModelsView.MyCourseItemVM>
@{
    ViewData["Title"] = "My Courses - In Progress";
}

<section class="container py-4">
    <h4 class="mb-3">
        In Progress
        <span class="badge bg-primary">@ViewBag.InProgressCount</span>
    </h4>

    @if (!(Model?.Any() ?? false))
    {
        <div class="alert alert-info">No active enrollments.</div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var c in Model)
            {
                var isExpired = c.EndDate <= DateTime.Now; // check course duration end
                var statusText = isExpired ? "Completed" : "Active";
                var statusClass = isExpired ? "bg-secondary" : "bg-success";

                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(c.ThumbnailUrl))
                        {
                            <img src="@c.ThumbnailUrl" class="card-img-top" alt="@c.Title"
                                 style="height:180px;object-fit:cover;" />
                        }
                        else
                        {
                            <img src="~/images/no-image.png" class="card-img-top" alt="No Image"
                                 style="height:180px;object-fit:cover;" />
                        }

                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title me-2">@c.Title</h5>
                                <span class="badge @statusClass">@statusText</span>
                            </div>

                            <div class="small text-muted mb-1">
                                Ends on: @c.EndDate.ToString("dd MMM yyyy")
                            </div>

                            <div class="mt-auto d-flex justify-content-between align-items-center pt-2">
                                <span class="fw-semibold">৳ @c.PriceBdt.ToString("N0")</span>

                                @* যদি course duration শেষ হয়ে যায়, তাহলে “Not available” দেখাও *@
                                @if (isExpired)
                                {
                                    <button class="btn btn-outline-secondary btn-sm" disabled>Not available</button>
                                }
                                else
                                {
                                    <a class="btn btn-outline-primary btn-sm"
                                       asp-controller="Courses" asp-action="Info" asp-route-id="@c.CourseId">
                                        Go to course
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</section>

<!-- Include protection CSS & JS -->
<link href="~/css/Protect-course-info.css" rel="stylesheet" />
<script src="~/js/protect-course-info.js" asp-append-version="true"></script>