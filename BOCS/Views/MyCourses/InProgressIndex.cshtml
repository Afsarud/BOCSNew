@model IEnumerable<BOCS.ModelsView.MyCourseItemVM>
@{
    ViewData["Title"] = "My courses - In progress";
}
<section class="container py-4">
    <h4 class="mb-3">In progress</h4>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No active enrollments.</div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var c in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(c.ThumbnailUrl))
                        {
                            <img src="@c.ThumbnailUrl" class="card-img-top" alt="@c.Title"
                                 style="height:180px;object-fit:cover;" />
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@c.Title</h5>
                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <span class="fw-semibold">৳ @c.PriceBdt.ToString("N0")</span>
                                <a class="btn btn-outline-primary btn-sm"
                                   asp-controller="Courses" asp-action="Info" asp-route-id="@c.CourseId">
                                    Go to course
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</section>