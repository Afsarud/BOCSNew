@model IEnumerable<BOCS.ModelsView.MyCourseItemVM>
@{
    ViewData["Title"] = "Completed Courses";
}

<section class="container py-4">
    <h4 class="mb-3">
        Completed Courses
        <span class="badge bg-secondary">@ViewBag.CompletedCount</span>
    </h4>

    @if (!(Model?.Any() ?? false))
    {
        <div class="alert alert-info">No completed courses yet.</div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var item in Model!)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <img src="@(string.IsNullOrWhiteSpace(item.ThumbnailUrl) ? Url.Content("~/images/no-image.png") : item.ThumbnailUrl)"
                             class="card-img-top" alt="@item.Title" style="height:180px;object-fit:cover;" />

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.Title</h5>
                            <span class="badge bg-secondary">Completed</span>

                            <div class="small text-muted mt-1">
                                Completed on: @item.EndDate.ToString("dd MMM yyyy")
                            </div>

                            <div class="mt-auto d-flex justify-content-between align-items-center pt-2">
                                <span class="fw-semibold">৳ @item.PriceBdt.ToString("N0")</span>
                                <button class="btn btn-outline-secondary btn-sm" disabled>
                                    Not available
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</section>
<!-- Include protection CSS & JS -->
<link href="~/css/Protect-course-info.css" rel="stylesheet" />
<script src="~/js/protect-course-info.js" asp-append-version="true"></script>