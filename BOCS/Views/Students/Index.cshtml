@model IEnumerable<BOCS.ModelsView.StudentEnrollmentItemVM>
@{
    ViewData["Title"] = "Enrolled Courses";
}
<section class="container py-4">
    <h4 class="mb-3">Enrolled Courses</h4>

    @if (!(Model?.Any() ?? false))
    {
        <div class="alert alert-info">You haven’t enrolled in any course yet.</div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var item in Model!)
            {
                var statusText = item.IsArchived ? "Archived"
                : (item.IsApproved ? "Active" : "Pending");
                var statusClass = item.IsArchived ? "bg-secondary"
                : (item.IsApproved ? "bg-success" : "bg-warning text-dark");

                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrWhiteSpace(item.ThumbnailUrl))
                        {
                            <img src="@item.ThumbnailUrl" class="card-img-top" alt="@item.Title"
                                 style="height:180px;object-fit:cover;" />
                        }
                        else
                        {
                            <img src="~/images/no-image.png" class="card-img-top" alt="No Image"
                                 style="height:180px;object-fit:cover;" />
                        }

                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start">
                                <h5 class="card-title me-2">@item.Title</h5>
                                <span class="badge @statusClass">@statusText</span>
                            </div>

                            <div class="small text-muted mt-1">
                                Enrolled: @item.CreatedAt.ToLocalTime().ToString("dd MMM yyyy")
                            </div>

                            <div class="mt-auto d-flex justify-content-between align-items-center pt-2">
                                <span class="fw-semibold">৳ @item.PriceBdt.ToString("N0")</span>

                                @* Approved & not archived হলে কোর্সে যাওয়ার বাটন দেখাই *@
                                @if (item.IsApproved && !item.IsArchived)
                                {
                                    <a class="btn btn-outline-primary btn-sm"
                                       asp-controller="Courses" asp-action="Info" asp-route-id="@item.CourseId">
                                        Go to course
                                    </a>
                                }
                                else
                                {
                                    <button class="btn btn-outline-secondary btn-sm" disabled>Not available</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</section>